---
// Layout.astro
import '../styles/dist/global.css';

export interface Props {
	title: string;
	description?: string;
	favicon?: string;
	bodyClasses?: string;
}

const {
	title = 'Aspine',
	description = 'Aspen, reborn. More features, better UI, and a team that is for students, by students.',
	favicon = '/favicon.ico',
	bodyClasses = 'bg-black text-[#e5eae7] overflow-x-hidden'
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		{favicon && <link rel="icon" href={favicon} />}
	</head>
	<body class={bodyClasses}>
		<slot />
		<script>
			// Thank you stack overflow <3
			if (typeof window !== 'undefined') {
				window.addEventListener('pageshow', event => {
					if (event.persisted) {
						console.log('Page was restored from bfcache.');
					}
				});

				window.addEventListener('pagehide', event => {
					if (event.persisted) {
						console.log('Page is about to be put into bfcache.');
					} else {
						console.log('Page is being fully unloaded.');
					}
				});
			}
		</script>
	</body>
</html>
